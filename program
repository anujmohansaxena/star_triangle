  #include<stdio.h>
  #include<conio.h>
  void main()
  {
    int i,j,k;
    clrscr();
    
    // to print lines
    for(i=1;i<=4;i++)
    {
      //to print spaces
      for(j=1;j<=4-i;j++)
      {
        printf(" ");
      }
      //to print starts
      for(k=1;k<=2*i-1;k++)
      {
       printf("*");
      }
      printf("\n");
    }
  
  }
